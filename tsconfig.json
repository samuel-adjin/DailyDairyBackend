{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "target": "es6",
    "noImplicitAny": false,
    "module": "commonjs",
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "lib": [
      "dom",
      "es6",
      "es2017",
      "esnext.asynciterable"
    ],
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "types/express"
  ]
}